<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TimePicker" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
    </style>



    <style name="Widget" />

    <style name="Widget.Material" />

    <style name="Widget.Material.Light.NumberPicker" parent="Widget.Material.NumberPicker" />


    <style name="Widget.NumberPicker">
        <!--<item name="internalLayout">@layout/number_picker</item>-->
        <item name="android:orientation">vertical</item>
        <item name="android:fadingEdge">vertical</item>
        <item name="android:fadingEdgeLength">50dip</item>
    </style>

    <style name="Widget.TimePicker">
        <item name="timePickerMode">spinner</item>
        <!--<item name="legacyLayout">@layout/time_picker_legacy</item>-->
    </style>

    <style name="Widget.Material.NumberPicker" parent="Widget.NumberPicker">
        <item name="dtp_internalLayout">@layout/number_picker_material</item>
        <item name="dtp_solidColor">@android:color/transparent</item>
        <item name="dtp_selectionDivider">@drawable/number_picker_divider_material</item>
        <item name="dtp_selectionDividerHeight">2dp</item>
        <item name="dtp_selectionDividersDistance">48dp</item>
        <item name="dtp_internalMinWidth">64dp</item>
        <item name="dtp_internalMaxHeight">180dp</item>
        <item name="dtp_virtualButtonPressedDrawable">?attr/selectableItemBackground</item>
    </style>

    <style name="Widget.Material.Light.TimePicker" parent="Widget.Material.TimePicker">
        <item name="dtp_headerTextColor">
            @color/primary_text_secondary_when_activated_material_inverse
        </item>
        <item name="headerBackground">?attr/colorAccent</item>
        <item name="numbersBackgroundColor">#ffeeeeee</item>
    </style>

    <style name="Widget.Material.TimePicker">
        <item name="timePickerMode">@integer/time_picker_mode_material</item>
        <item name="dtp_legacyLayout">@layout/time_picker_legacy_material</item>
        <!-- Attributes for new-style TimePicker. -->
        <item name="dtp_internalLayout">@layout/time_picker_material</item>
        <item name="dtp_headerTextColor">@color/primary_text_secondary_when_activated_material
        </item>
        <item name="headerBackground">#ff555555</item>
        <item name="numbersTextColor">@color/primary_text_inverse_when_activated_material
        </item><!-- ?textColorPrimaryActivated -->
        <item name="numbersInnerTextColor">@color/secondary_text_inverse_when_activated_material
        </item><!-- ?textColorSecondaryActivated -->
        <item name="numbersSelectorColor">?attr/colorControlActivated</item>
        <item name="numbersBackgroundColor">#ff555555</item>
    </style>


    <style name="ThemeOverlay.Material.Dialog.TimePicker" parent="@style/ThemeOverlay.AppCompat.Dialog">
        <item name="alertDialogStyle">@style/TimePickerDialog.Material</item>
    </style>

    <style name="TimePickerDialog.Material" parent="@style/AlertDialog.AppCompat">
        <item name="showTitle">false</item>
    </style>


    <style name="TextAppearance.Material.TimePicker.TimeLabel" parent="@style/TextAppearance.AppCompat"><!-- TextAppearance.Material -->
        <item name="android:textSize">@dimen/timepicker_time_label_size</item>
    </style>

    <style name="TextAppearance.Material.TimePicker.AmPmLabel" parent="@style/TextAppearance.AppCompat.Button"><!-- TextAppearance.Material.Button -->
        <item name="android:textSize">@dimen/timepicker_ampm_label_size</item>
    </style>

    <style name="TextAppearance.Material.NumberPicker" parent="@style/TextAppearance.AppCompat.Body1"/>

    <style name="TextAppearance.Material.TimePicker.PromptLabel" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/timepicker_text_size_normal</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Material.TimePicker.InputField" parent="@style/TextAppearance.AppCompat"> <!-- TextAppearance.Material -->
        <item name="android:textSize">@dimen/timepicker_edit_text_size</item>
    </style>


</resources>